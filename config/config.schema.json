{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "minLength": 1
    },
    "hmacSecret": {
      "type": "string",
      "minLength": 1
    },
    "hooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "pattern": "[a-z-]+"
          },
          "embed": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "minLength": 1
              },
              "color": {
                "type": "string",
                "minLength": 1,
                "pattern": "^#(?:[\\da-fA-F]{3}){1,2}$"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 1
                    },
                    "content": {
                      "type": "string",
                      "minLength": 1
                    },
                    "inline": {
                      "type": "boolean",
                      "default": false
                    }
                  },
                  "required": [
                    "name",
                    "content"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "title"
            ],
            "additionalProperties": false
          },
          "webhookURL": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "id",
          "embed",
          "webhookURL"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "$schema",
    "hmacSecret",
    "hooks"
  ],
  "additionalProperties": false
}
